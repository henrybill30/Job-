/* pages/allbiz/allbiz.wxss */
.allbiz{
  margin-left: 10rpx;
}
.biz{
  display: flex;
  border: 2px solid #ffffff;
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 5px 5px 10px #cccccc;
  margin: 10px;
  height: 220rpx;
  width: 680rpx;
}
.info{
  display: block;
  margin-left: 10px;
  margin-top:10px;
}
.image{
  width: 350rpx;
  height: 200rpx;
  margin-left: 15px;
  margin-top: 8px;
}
.info1{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 15px;
  width: 200rpx;
}
.line{
   width: 200px;
   height: 1px;
   background: linear-gradient(to right,black,white);
   margin-top: 5px;
   margin-left: 0px;
}
.info2{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 12px;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
   width: 400rpx;
}