.company_image{
  width: 100%;
  height: 450rpx;
}
.info{
  margin-top: 50rpx;
}
.word{
  font-size: 15px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.select_box{
  background: #fff;
  width: 100%;
  margin: 30rpx auto;
  position: relative;
}
.option_box{
  top: 70rpx;
  width: 95%;
  border:1px solid #efefef;
  box-sizing: border-box; 
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.1s;
  margin-left: 20rpx;
}
.option{
  display: block;
  line-height: 48rpx;
  font-size: 26rpx;
  border-top: 1px solid #efefef;
  padding: 10rpx;
  text-indent: 0rpx;
  text-align: left;
}
.select{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.1s;
  margin-left: 175px;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.phone{
  width: 100%;
}

